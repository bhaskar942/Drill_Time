<!-- NAVBAR -->
<header class="header_area list-nav">
  <div class="main-menu">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark ">
      <a class="navbar-brand mx-auto list-nav" href="/"> <img src="img/logo1.png" alt=""> </a>
    </nav>
  </div>
</header>



<!-- Exercise list -->

<section class="list-area">
  <div class="tl text-uppercase">
  <%=typeOfFood%>
  </div>
  <div class="box1 ">

    <div class="item enter">
      <form class="" action="/createNewFood" method="post">
        <input type="hidden" name="tof" value="<%=typeOfFood%>" >
        <input type="text" name="newFood" class="ip1" placeholder=" Enter a new item" onfocus="this.placeholder=''" onblur="this.placeholder=' Enter a new item" autocomplete="off"></input>
        <!-- <button type="submit" name="list">+</button> -->
      </form>
    </div>
  </div>


  <div class="box">

    <%itemsArray.forEach(function(item_i){%>


    <div class="item control-group">
      <label class="control control-checkbox">

        <input type="checkbox" name="checkedBox" value="<%=item_i%>">

        <p> <%= item_i %> </p>

        <div class="control_indicator"></div>
      </label>
    </div>
    <%})%>




  </div>

  <div class="del">


      <form class="" action="/deleteFoodList" method="post">
        <input type="hidden" name="tof" value="<%=typeOfFood%>" >
        <!-- <input type="text" name="newExercise" class="ip1" placeholder=" Enter a new Exercise" onfocus="this.placeholder=''" onblur="this.placeholder=' Enter a new Exercise'" autocomplete="off"></input> -->
        <!-- <button type="submit" name="list">+</button> -->
        <input type="button" class="btn  btn-outline-light-sm list-btn " id="outl" value="Clear Food List" onclick="this.form.submit()">
      </form>
  </div>
  <!-- also add a save list option when creating the DB -->
</section>


